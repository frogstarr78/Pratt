    <%= Pratt.percent(Project.primary.name,  @primary.to_f,        @scaled_total, :green) %>
    <%= Pratt.percent(Project.off.name,      @off_total.to_f,      @scaled_total, :yellow) %>
    <%= Pratt.percent('Other',               @rest_total.to_f,     @scaled_total, :red) %>
